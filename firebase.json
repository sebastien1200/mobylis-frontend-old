{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssr"
      }
    ],
    "redirects": [
      {
        "source": "/api/test",
        "destination": "http://localhost:8080/test",
        "type": 301
      }
    ],
    "functions": {
      "predeploy": "npm --prefix functions run build"
    },
    // Add the "headers" section within "hosting".
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      }
    ]
  }
}
